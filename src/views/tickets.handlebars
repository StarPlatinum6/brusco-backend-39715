      {{#each userTickets.products}}
        <div
          class="max-w-4xl border rounded-lg shadow bg-gray-700/50 border-gray-600 my-2"
          id="{{this.productId._id}}"
        >
          <div class="flex flex-wrap w-full p-2 justify-evenly">
            <img
              src="http://localhost:8080/{{lookup this.productId.thumbnails 0}}"
              alt="product image"
              class="aspect-square max-h-32 m-2 ring-4 rounded-xl"
            />
            <div class="px-5 mt-2">
              <h5
                class="text-2xl font-semibold tracking-tight text-white text-center"
              >{{this.productId.title}}</h5>
              <p class="font-light tracking-tight text-white my-1">Selected
                quantity:
                {{this.quantity}}</p>
              <p class="font-light tracking-tight text-white my-1">Unit price: ${{this.productId.price}}</p>
              <div class="flex justify-between">
                <p class="text-lg tracking-wider text-white my-1">Total price: ${{multiply
                    this.productId.price
                    this.quantity
                  }}</p>
                <form
                  class="flex justify-end"
                  id="removeFromCartForm-{{this.productId._id}}"
                >
                  <button
                    type="submit"
                    class="text-slate-100 bg-red-700 hover:bg-red-800 focus:ring-2 focus:outline-none focus:ring-red-500 font-medium rounded-lg text-xs w-full sm:w-auto px-3 py-1.5 text-center"
